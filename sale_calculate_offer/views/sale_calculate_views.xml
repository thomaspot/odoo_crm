<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="sale_calculate_form" model="ir.ui.view">
        <field name="name">sale.calculate.form</field>
        <field name="model">sale.order.calculate</field>
        <field name="arch" type="xml">
            <form string="Calculate Form">
                <header>
                    <button name="toggle_active"
                        string="Restore"
                        type="object"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="team_id" invisible="1"/>
                    <field name="stage_id" invisible="1"/>                    
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Lead"/>
                        <h1><field name="name" placeholder="Describe the calculation..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="total_hours" readonly="1"/>
                        </group>
                        <group>
                            <field name="calculate_users"/>
                            <field name="calculate_enterprise"/>
                            <field name="calculate_saas"/>
                            <field name="calculate_saas_support"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Modules">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
			</form>
		</record>


        <record id="sale_calculation_tree" model="ir.ui.view">
            <field name="name">sale.order.calculate.tree</field>
            <field name="model">sale.order.calculate</field>
            <field name="arch" type="xml">
                <tree string="Calculations">
                    <field name="name"/>
                    <field name="sale_id"/>
                    <field name="partner_id"/>
                    <field name="total_hours"/>
                </tree>
            </field>
        </record>

        <record id="sale_calculation_search" model="ir.ui.view">
            <field name="name">sale.calculation.search</field>
            <field name="model">sale.order.calculate</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="sale_id"/>
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <menuitem
            id="calculate_menu"
            name="Calculations"
            action="sale_order_calculate_action"
            sequence="29"/>

        <record model="ir.actions.act_window" id="sale_order_calculate_action">
            <field name="name">Calculations</field>
            <field name="res_model">sale.order.calculate</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sale_calculation_search"/>
            <field name="view_id" ref="sale_calculation_tree"/>
            <field name="context">{}
            </field>
        </record>
</odoo>
